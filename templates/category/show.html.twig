{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="page-header">
        <a href="{{ path('app_category_index') }}" class="btn-back">‚Üê Back to list</a>
        <h1>Category Details</h1>
    </div>

    <article class="post-detail-card">
        <div class="post-detail-header">
            <span class="post-id">#{{ category.id }}</span>
            <span class="post-date">{{ category.posts|length }} posts</span>
        </div>

        <div class="post-detail-body">
            <h2 class="post-detail-title">{{ category.name }}</h2>
            
            {% if category.posts|length > 0 %}
                <div class="post-detail-section">
                    <h3>Posts in this category</h3>
                    <ul class="category-posts-list">
                        {% for post in category.posts %}
                            <li>
                                <a href="{{ path('app_blog_show', {'slug': post.slug}) }}">{{ post.title }}</a>
                                <span class="post-meta">by {{ post.author ?? 'Unknown' }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <p class="no-posts-message">No posts in this category yet.</p>
            {% endif %}
        </div>

        <div class="post-detail-actions">
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-action btn-edit">
                Edit Category
            </a>
            <div class="delete-wrapper">
                {{ include('category/_delete_form.html.twig') }}
            </div>
        </div>
    </article>
{% endblock %}
