<style>
    .cancel-btn {
        background-color: #e5e7eb; /* gray-200 */
        color: #1f2937; /* gray-800 */
    }
    html.dark .cancel-btn {
        background-color: #4b5563; /* gray-600 */
        color: #f9fafb; /* gray-100 */
    }
    .cancel-btn:hover {
        background-color: #d1d5db; /* gray-300 */
    }
    html.dark .cancel-btn:hover {
        background-color: #6b7280; /* gray-500 */
    }
</style>
{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="space-y-6">
        <!-- Title & Slug Row -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
                {{ form_label(form.title, 'Título del Post', {
                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}
                }) }}
                {{ form_widget(form.title, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all',
                        'placeholder': 'Mi post felino increíble'
                    }
                }) }}
                {{ form_errors(form.title) }}
            </div>
            
            <div>
                {{ form_label(form.slug, 'Slug (URL)', {
                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}
                }) }}
                {{ form_widget(form.slug, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all font-mono text-sm',
                        'placeholder': 'mi-post-felino-increible'
                    }
                }) }}
                {{ form_errors(form.slug) }}
            </div>
        </div>
        
        <!-- Author & Published Date Row -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
                {{ form_label(form.author, 'Autor', {
                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}
                }) }}
                {{ form_widget(form.author, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all'
                    }
                }) }}
                {{ form_errors(form.author) }}
            </div>
            
            <div>
                {{ form_label(form.publishedAt, 'Fecha de Publicación', {
                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}
                }) }}
                {{ form_widget(form.publishedAt, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all'
                    }
                }) }}
                {{ form_errors(form.publishedAt) }}
            </div>
        </div>
        
        <!-- Categories -->
        <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
            {{ form_label(form.categories, 'Categorías', {
                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-3'}
            }) }}
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
                {% for checkbox in form.categories %}
                    <div class="flex items-center">
                        <div class="flex items-center h-5">
                            {{ form_widget(checkbox, {
                                'attr': {'class': 'w-4 h-4 text-purple-600 dark:text-purple-500 border-gray-300 dark:border-gray-500 rounded focus:ring-purple-500 dark:focus:ring-purple-400 bg-white dark:bg-gray-600'}
                            }) }}
                        </div>
                        <div class="ml-2 text-sm">
                            {{ form_label(checkbox, null, {
                                'label_attr': {'class': 'font-medium text-gray-700 dark:text-gray-300'}
                            }) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-3">Selecciona una o más categorías relevantes</p>
            {{ form_errors(form.categories) }}
        </div>
        
        <!-- Summary -->
        <div>
            {{ form_label(form.summary, 'Resumen', {
                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}
            }) }}
            {{ form_widget(form.summary, {
                'attr': {
                    'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all resize-none',
                    'rows': '3',
                    'placeholder': 'Un breve resumen que aparecerá en las listas de posts...'
                }
            }) }}
            {{ form_errors(form.summary) }}
        </div>
        
        <!-- Content -->
        <div>
            {{ form_label(form.content, 'Contenido', {
                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}
            }) }}
            {{ form_widget(form.content, {
                'attr': {
                    'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all resize-none font-mono text-sm',
                    'rows': '12',
                    'placeholder': 'Escribe aquí el contenido completo de tu post...'
                }
            }) }}
            {{ form_errors(form.content) }}
        </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex items-center justify-between pt-6 border-t border-gray-200 dark:border-gray-700">
        <a href="{{ path('app_blog_index') }}" class="cancel-btn px-6 py-3 rounded-lg font-semibold transition-all shadow-md">
            Cancelar
        </a>
        <button type="submit" class="bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white px-8 py-3 rounded-lg font-bold transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {{ button_label|default('Guardar Post') }}
        </button>
    </div>
{{ form_end(form) }}
