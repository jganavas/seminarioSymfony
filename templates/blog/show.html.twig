{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="page-header">
        <a href="{{ path('app_blog_index') }}" class="btn-back">‚Üê Back to list</a>
        <h1>Post Details</h1>
    </div>

    <article class="post-detail-card">
        <div class="post-detail-header">
            <span class="post-id">#{{ post.id }}</span>
            <span class="post-date">
                {{ post.publishedAt ? post.publishedAt|date('d M Y') : 'Not published' }}
            </span>
        </div>

        <div class="post-detail-body">
            <h2 class="post-detail-title">{{ post.title }}</h2>
            <p class="post-detail-slug">{{ post.slug }}</p>
            
            {% if post.summary %}
                <div class="post-detail-section">
                    <h3>Summary</h3>
                    <p>{{ post.summary }}</p>
                </div>
            {% endif %}

            {% if post.content %}
                <div class="post-detail-section">
                    <h3>Content</h3>
                    <p>{{ post.content }}</p>
                </div>
            {% endif %}
        </div>

        <div class="post-detail-actions">
            <a href="{{ path('app_blog_edit', {'id': post.id}) }}" class="btn-action btn-edit">
                Edit Post
            </a>
            <div class="delete-wrapper">
                {{ include('blog/_delete_form.html.twig') }}
            </div>
        </div>
    </article>
{% endblock %}
