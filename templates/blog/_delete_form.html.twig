<form method="post" action="{{ path('app_blog_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post? This action cannot be undone.');" class="delete-form">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button type="submit" class="btn-delete">Delete Post</button>
</form>
