{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <a href="{{ path('app_blog_index') }}" class="inline-flex items-center text-purple-600 hover:text-purple-700 font-medium transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to list
            </a>
            <h1 class="text-3xl font-bold text-gray-800">Edit Post</h1>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
            {{ include('blog/_form.html.twig', {'button_label': 'Update Post'}) }}
        </div>

        <div class="bg-red-50 border-2 border-red-200 rounded-xl p-8">
            <div class="flex items-start mb-4">
                <svg class="w-6 h-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <div>
                    <h3 class="text-xl font-bold text-red-800 mb-2">Danger Zone</h3>
                    <p class="text-red-700 mb-4">Once you delete a post, there is no going back. Please be certain.</p>
                    {{ include('blog/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
