{% extends 'base.html.twig' %}

{% block title %}Mi paginilla{% endblock %}

{% block body %}
    <div class="posts-header">
        <h1>Miauuu</h1>
        <a href="{{ path('app_blog_new') }}" class="btn-create">Create new</a>
    </div>

    <div class="posts-grid">
        {% for post in posts %}
            <article class="post-card">
                <div class="post-card-header">
                    <span class="post-id">#{{ post.id }}</span>
                    <span class="post-date">{{ post.publishedAt ? post.publishedAt|date('Y-m-d') : 'Not published' }}</span>
                </div>
                <div class="post-card-body">
                    <h2 class="post-title">{{ post.title }}</h2>
                    <p class="post-slug">{{ post.slug }}</p>
                    {% if post.summary %}
                        <p class="post-summary">{{ post.summary }}</p>
                    {% endif %}
                    {% if post.content %}
                        <p class="post-content">{{ post.content }}</p>
                    {% endif %}
                </div>
                <div class="post-card-actions">
                    <a href="{{ path('app_blog_show', {'slug': post.slug}) }}" class="btn-action btn-show">Show</a>
                    <a href="{{ path('app_blog_edit', {'id': post.id}) }}" class="btn-action btn-edit">Edit</a>
                </div>
            </article>
        {% else %}
            <div class="no-posts">
                <p>No records found</p>
                <a href="{{ path('app_blog_new') }}" class="btn-create">Create your first post</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
