{% extends 'base.html.twig' %}

{% block title %}Mi paginilla{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-8 flex-wrap gap-4">
        <h1 class="text-4xl font-bold text-gray-800">Miauuu</h1>
        <a href="{{ path('app_blog_new') }}" class="btn-primary">Create new</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        {% for post in posts %}
            <article class="card">
                <div class="flex justify-between items-center pb-4 border-b-2 border-gray-100">
                    <span class="bg-purple-500 text-white px-3 py-1 rounded-full text-sm font-semibold">#{{ post.id }}</span>
                    <span class="text-gray-500 text-sm">{{ post.publishedAt ? post.publishedAt|date('Y-m-d') : 'Not published' }}</span>
                </div>
                <div class="flex-1 flex flex-col gap-2 my-4">
                    <h2 class="text-xl font-bold text-gray-800">{{ post.title }}</h2>
                    <p class="text-purple-600 font-medium">{{ post.slug }}</p>
                    {% if post.author %}
                        <p class="text-gray-600">By {{ post.author }}</p>
                    {% endif %}
                    {% if post.category %}
                        <span class="inline-block bg-purple-100 text-purple-700 px-3 py-1 rounded-full text-sm font-medium w-fit">{{ post.category.name }}</span>
                    {% endif %}
                    {% if post.summary %}
                        <p class="text-gray-700 mt-2">{{ post.summary }}</p>
                    {% endif %}
                    {% if post.content %}
                        <p class="text-gray-600 text-sm line-clamp-3">{{ post.content }}</p>
                    {% endif %}
                </div>
                <div class="flex gap-3 pt-4 border-t border-gray-100">
                    <a href="{{ path('app_blog_show', {'slug': post.slug}) }}" class="flex-1 text-center bg-purple-100 text-purple-700 px-4 py-2 rounded-lg font-medium hover:bg-purple-200 transition-all">Show</a>
                    <a href="{{ path('app_blog_edit', {'id': post.id}) }}" class="flex-1 text-center bg-blue-100 text-blue-700 px-4 py-2 rounded-lg font-medium hover:bg-blue-200 transition-all">Edit</a>
                </div>
            </article>
        {% else %}
            <div class="col-span-full text-center py-16">
                <p class="text-xl text-gray-500 mb-6">No records found</p>
                <a href="{{ path('app_blog_new') }}" class="btn-primary">Create your first post</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
