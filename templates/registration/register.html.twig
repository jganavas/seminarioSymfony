{% extends 'base.html.twig' %}

{% block title %}Registro - Mi paginilla{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="text-6xl mb-4">üê±</div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">√önete a la Comunidad</h1>
            <p class="text-gray-600">Crea tu cuenta y empieza a publicar</p>
        </div>

        <!-- Flash Messages -->
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-lg" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <span>{{ flash_error }}</span>
                </div>
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-lg" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span>{{ message }}</span>
                </div>
            </div>
        {% endfor %}

        <!-- Registration Form Card -->
        <div class="card">
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                
                <!-- Form Errors -->
                {% if form_errors(registrationForm) %}
                    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded-lg">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                <!-- First Name -->
                <div>
                    {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.firstName) }}
                    {{ form_errors(registrationForm.firstName) }}
                </div>

                <!-- Last Name -->
                <div>
                    {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.lastName) }}
                    {{ form_errors(registrationForm.lastName) }}
                </div>

                <!-- Email -->
                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.email) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <!-- Password -->
                <div>
                    {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                    <p class="text-sm text-gray-500 mt-1">
                        Debe contener al menos 8 caracteres, una may√∫scula, una min√∫scula y un n√∫mero
                    </p>
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <!-- Terms and Conditions -->
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500'}}) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-gray-700'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button type="submit" class="btn-primary w-full">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                        </svg>
                        Crear Cuenta
                    </button>
                </div>

            {{ form_end(registrationForm) }}
        </div>

        <!-- Login Link -->
        <div class="text-center mt-6">
            <p class="text-gray-600">
                ¬øYa tienes cuenta? 
                <a href="#" class="text-purple-600 hover:text-purple-800 font-semibold">Inicia Sesi√≥n</a>
            </p>
        </div>
    </div>
{% endblock %}
