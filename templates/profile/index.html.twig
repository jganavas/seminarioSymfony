{% extends 'base.html.twig' %}

{% block title %}Mi Perfil{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto">
        {# Header del Perfil #}
        <div class="bg-gradient-to-r from-purple-600 to-purple-800 dark:from-purple-700 dark:to-purple-900 rounded-2xl shadow-xl p-8 mb-8">
            <div class="flex items-center gap-6">
                <div class="w-40 h-40 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center text-purple-600 dark:text-purple-400 text-3xl font-bold shadow-lg ring-4 ring-white dark:ring-gray-700">
                    {{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
                </div>
                <div class="flex-1">
                    <h1 class="text-4xl font-bold text-white mb-2">{{ user.fullName }}</h1>
                    <p class="text-purple-100 dark:text-purple-200 text-lg mb-3">{{ user.email }}</p>
                    <div class="flex gap-6 text-white">
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <span class="font-semibold">{{ user.posts|length }}</span>
                            <span class="text-purple-100">{{ user.posts|length == 1 ? 'Publicación' : 'Publicaciones' }}</span>
                        </div>
                        {# Writer badge - check if specialty property exists #}
                        {% if user.specialty is defined and user.specialty %}
                            <div class="flex items-center gap-2 bg-blue-500/20 px-3 py-1 rounded-full">
                                <svg class="w-5 h-5 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-blue-300 font-semibold">{{ user.specialty }}</span>
                            </div>
                        {# Administrator badge - check if permissionLevel property exists #}
                        {% elseif user.permissionLevel is defined %}
                            <div class="flex items-center gap-2 bg-yellow-500/20 px-3 py-1 rounded-full">
                                <svg class="w-5 h-5 text-yellow-300" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2Z"/>
                                </svg>
                                <span class="text-yellow-300 font-semibold">Admin Nivel {{ user.permissionLevel }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% if user.bio %}
                <div class="mt-6 bg-white/10 dark:bg-black/20 rounded-xl p-4 backdrop-blur-sm">
                    <p class="text-white leading-relaxed">{{ user.bio }}</p>
                </div>
            {% endif %}
        </div>

        {# Tabs de Navegación #}
        <div class="mb-6">
            <div class="border-b border-gray-200 dark:border-gray-700">
                <nav class="flex gap-8">
                    <button class="tab-button active border-b-2 border-purple-600 text-purple-600 dark:text-purple-400 pb-4 px-4 font-semibold transition-all duration-300 hover:bg-purple-50 dark:hover:bg-purple-900/20 rounded-t-lg hover:scale-105" data-tab="posts">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                        </svg>
                        Mis Publicaciones
                    </button>
                    <button class="tab-button border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 hover:border-purple-300 dark:hover:border-purple-500 pb-4 px-4 font-semibold transition-all duration-300 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-t-lg hover:scale-105" data-tab="settings">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        Configuración
                    </button>
                </nav>
            </div>
        </div>

        {# Contenido de Tabs #}
        <div class="tab-content" id="posts-content">
            {% if user.posts|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for post in user.posts %}
                        <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group">
                            <div class="p-6">
                                <div class="flex justify-between items-start mb-3">
                                    <span class="inline-block bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 px-3 py-1 rounded-full text-xs font-semibold">
                                        #{{ post.id }}
                                    </span>
                                    <span class="text-sm text-gray-500 dark:text-gray-400">
                                        {{ post.publishedAt ? post.publishedAt|date('d/m/Y') : 'Borrador' }}
                                    </span>
                                </div>
                                
                                <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-3 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors line-clamp-2">
                                    {{ post.title }}
                                </h3>
                                
                                {% if post.summary %}
                                    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">{{ post.summary }}</p>
                                {% endif %}

                                {% if post.categories|length > 0 %}
                                    <div class="flex flex-wrap gap-2 mb-4">
                                        {% for category in post.categories|slice(0, 3) %}
                                            <span class="inline-block bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-2 py-1 rounded text-xs">
                                                {{ category.name }}
                                            </span>
                                        {% endfor %}
                                        {% if post.categories|length > 3 %}
                                            <span class="inline-block bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-2 py-1 rounded text-xs">
                                                +{{ post.categories|length - 3 }}
                                            </span>
                                        {% endif %}
                                    </div>
                                {% endif %}

                                <div class="flex gap-2 pt-4 border-t border-gray-100 dark:border-gray-700">
                                    <a href="{{ path('app_blog_show', {'slug': post.slug}) }}" class="flex-1 text-center bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 px-4 py-2 rounded-lg font-medium hover:bg-purple-200 dark:hover:bg-purple-800 transition-all">
                                        Ver
                                    </a>
                                    <a href="{{ path('app_blog_edit', {'id': post.id}) }}" class="flex-1 text-center bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 px-4 py-2 rounded-lg font-medium hover:bg-blue-200 dark:hover:bg-blue-800 transition-all">
                                        Editar
                                    </a>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
                    <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-3">Aún no has publicado nada</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">Comparte tus ideas y conocimientos con la comunidad. ¡Crea tu primera publicación ahora!</p>
                    <a href="{{ path('app_blog_new') }}" class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white px-8 py-4 rounded-lg font-semibold transition-all shadow-lg hover:shadow-xl">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Crear mi primera publicación
                    </a>
                </div>
            {% endif %}
        </div>

        <div class="tab-content hidden" id="settings-content">
            <div class="max-w-3xl mx-auto">
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
                    <div class="flex items-center gap-3 mb-6">
                        <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Información Personal</h2>
                    </div>

                    {% for message in app.flashes('success') %}
                        <div class="bg-green-50 dark:bg-green-900/20 border-l-4 border-green-500 text-green-800 dark:text-green-200 px-6 py-4 rounded-r-lg mb-6 flex items-center gap-3">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="font-medium">{{ message }}</span>
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                                {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all'}}) }}
                                {{ form_errors(form.firstName) }}
                            </div>

                            <div>
                                {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                                {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all'}}) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>

                        <div>
                            {{ form_label(form.bio, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Cuéntale a la comunidad un poco sobre ti</p>
                            {{ form_widget(form.bio, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all resize-none', 'rows': 4}}) }}
                            {{ form_errors(form.bio) }}
                        </div>

                        <div class="flex gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                            <button type="submit" class="flex-1 bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold transition-all shadow-md hover:shadow-lg flex items-center justify-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                Guardar Cambios
                            </button>
                            <a href="{{ path('app_home') }}" class="flex-1 text-center bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 px-6 py-3 rounded-lg font-semibold transition-all">
                                Cancelar
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tab functionality
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                const tabName = button.dataset.tab;
                
                // Update buttons
                document.querySelectorAll('.tab-button').forEach(btn => {
                    btn.classList.remove('active', 'border-purple-600', 'text-purple-600', 'dark:text-purple-400');
                    btn.classList.add('border-transparent', 'text-gray-500', 'dark:text-gray-400');
                });
                button.classList.add('active', 'border-purple-600', 'text-purple-600', 'dark:text-purple-400');
                button.classList.remove('border-transparent', 'text-gray-500', 'dark:text-gray-400');
                
                // Update content
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.add('hidden');
                });
                document.getElementById(tabName + '-content').classList.remove('hidden');
            });
        });
    </script>
{% endblock %}
